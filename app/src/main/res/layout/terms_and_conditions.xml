<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".termsAndConditions">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="FRATS Terms and conditions"
        android:gravity="center"
        android:textSize="24sp"
        android:padding="5dp"
        android:background="@color/cream"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textDirection="firstStrongLtr"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="hello terms and conditions of service hello terms and conditions of service hello terms and conditions of service hello terms and conditions of service"
                android:textStyle="italic"
                android:gravity="left"
                android:textAlignment="gravity"
                android:textSize="64sp"
                />

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right"
        >

        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="( I Accept )"
            android:textColor="@color/blue"
            />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Hi! Welcome To FRATS"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@color/cream"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="24sp"
                android:text="Enter details to join the community: "
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Name: "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:hint="full name"
                    android:inputType="text"
                    android:gravity="center"
                    android:background="@drawable/input_rectangle"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="D.O.B"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />


                <!-- DatePicker
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:backgroundTint="@color/blue"
                    android:calendarTextColor="@color/blue"
                    android:datePickerMode="calendar"
                    android:padding="5dp"
                    android:isScrollContainer="true"

                    / -->

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:hint="date of birth"
                    android:inputType="date"
                    android:gravity="center"
                    android:background="@drawable/input_rectangle"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Gender: "
                    android:gravity="top"
                    android:paddingLeft="40dp"
                    android:paddingTop="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:orientation="vertical"

                    >

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Male"
                            />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Female"
                            />

                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Phone: "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:hint="phone number"
                    android:inputType="phone"
                    android:gravity="center"
                    android:background="@drawable/input_rectangle"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Location"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:hint="area of residence"
                    android:inputType="text"
                    android:gravity="center"
                    android:background="@drawable/input_rectangle"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:paddingLeft="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Sign Up as "
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="0dp"
                        android:orientation="vertical"
                        >

                        <Button
                            android:id="@+id/user"
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="User"
                            android:background="@drawable/input_rectangle"
                            android:backgroundTint="@color/green"
                            android:layout_margin="1dp"
                            />
                        <Button
                            android:id="@+id/assist"
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Assistant"
                            android:background="@drawable/input_rectangle"
                            android:backgroundTint="@color/green"
                            android:layout_margin="1dp"
                            />


                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:text="Or"
                        android:textSize="24sp"
                        />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:text="log in"
                android:background="#ffffff"
                android:paddingRight="40dp"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
